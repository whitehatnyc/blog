{
  "extends": "stylelint-config-standard-scss",
  "quiet": true,
  "rules": {
    "declaration-empty-line-before": [
      "always",
      {
        "ignore": [
          "after-comment",
          "after-declaration",
          "first-nested",
          "inside-single-line-block"
        ]
      }
    ],
    "scss/no-global-function-names": null,
    "scss/dollar-variable-pattern": "^([a-z][a-z0-9]*)(-[a-z0-9]+)*(--[a-z0-9]+)?"
  }
}
